<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class='question col-md-3'><%= article.question %></td>
        <td class='answer col-md-9'><%= article.answer %></td>
        <td><%= link_to 'Show', article, class: 'btn btn-light' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-light' %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'btn btn-light' %>
